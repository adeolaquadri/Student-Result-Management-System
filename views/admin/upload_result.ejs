<!-- Upload Student Result Form -->
<section class="form-section">
  <h2>Upload Student Result</h2>

  <div id="error" class="message"><%=message%></div>

  <form action="/admin/upload_result" method="POST" enctype="multipart/form-data" class="upload-form">
    <fieldset>
      <legend>Result Upload Details</legend>

      <label for="level">Level</label>
      <select id="level" name="level" required>
        <option value="">-- Select student level --</option>
        <option value="ND1">ND1</option>
        <option value="ND2">ND2</option>
        <option value="HND1">HND1</option>
        <option value="HND2">HND2</option>
      </select>

      <label for="semester">Semester</label>
      <select id="semester" name="semester" required>
        <option value="">-- Select semester --</option>
        <option value="First">First</option>
        <option value="Second">Second</option>
      </select>

      <label for="session">Session</label>
      <input type="number" id="session" name="session" placeholder="e.g. 2025" min="2000" max="2099" required />

      <label for="file">CSV File</label>
      <input type="file" id="file" name="file" accept=".csv" required />

      <p class="note"><strong>Note:</strong> File must be in CSV format with headers:<br>
        <code>matric_number, courseId, courseTitle, Score, courseUnit</code>
      </p>

      <button type="submit" class="submit-btn">Upload Result</button>
    </fieldset>
  </form>
</section>

   <div class="footer">
    <footer>
      <p style="font-size: 15px; text-align: center;
      font-style: normal; color: gray;"> &copy; <span id="cr"></span> FCAHPTIB.</p>
      <p style="font-size: 14px; text-align: center;
      font-style: normal; color: gray;">Designed by Adeola Quadri. A</p>
      <p style="font-size: 14px; text-align: center;
      font-style: normal; color: gray;">Supervised by Dr. Mrs Olarenwaju O T.</p>
   </footer>
    </div>
  <script>
      let date = new Date
      document.getElementById("cr").innerHTML = date.getFullYear()
      document.querySelector('#logout').addEventListener('click', (e)=>{
      if(confirm('Are sure you want to logout?') == true){
       fetch('/admin/logout',{
       method: 'get'})
      }else{
       e.preventDefault()
   }
   
})
const errorMessage = document.getElementById('error')
    if(errorMessage.innerHTML !== ''){
        setTimeout(function(){
            errorMessage.style.display = 'none'
        },3000)
    }
  </script>
