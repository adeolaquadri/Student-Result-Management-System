<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Reprint Course Form</title>
  <link rel="icon" href="/fcahptib.png" type="image/png" />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    rel="stylesheet"
  />
  <link
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    /* Reset */
    *, *::before, *::after {
      box-sizing: border-box;
    }
    body, html {
      margin: 0; padding: 0; height: 100%;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #fafafa;
      color: #333;
    }

    /* Layout Grid: header, sidebar, main content, footer */
    body {
      display: grid;
      grid-template-areas:
        "header header"
        "sidebar main"
        "footer footer";
      grid-template-columns: 220px 1fr;
      grid-template-rows: 60px 1fr 40px;
      min-height: 100vh;
    }

    header.header {
      grid-area: header;
      background: #a73232;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 1rem;
      color: white;
    }
    header.header img {
      height: 40px;
    }
    header.header .menu-toggle {
      font-size: 24px;
      cursor: pointer;
      display: none; /* hide on desktop */
      background: none;
      border: none;
      color: white;
    }

    aside.sidebar {
      grid-area: sidebar;
      background: #7f2525;
      color: white;
      padding: 1rem 0;
      display: flex;
      flex-direction: column;
      transition: transform 0.3s ease;
    }
    aside.sidebar.hidden {
      transform: translateX(-100%);
    }

    aside.sidebar p.user-info {
      margin: 0 1rem 1.5rem;
      font-size: 1rem;
      text-align: center;
      text-transform: capitalize;
    }
    aside.sidebar p.user-info i {
      margin-right: 0.5rem;
    }
    aside.sidebar a {
      display: block;
      color: white;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      text-decoration: none;
      transition: background-color 0.3s ease;
      margin: 0.5rem 1rem;
      border-radius: 4px;
    }
    aside.sidebar a:hover,
    aside.sidebar a.active {
      background-color: #a73232;
    }

    main.main-content {
      grid-area: main;
      padding: 1rem 2rem;
      background: white;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    /* Table styling for reprint courses */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }
    table th, table td {
      border-bottom: 1px solid gainsboro;
      padding: 0.75rem 1rem;
      text-align: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 1rem;
    }
    table th {
      background: #f5f5f5;
      font-weight: 600;
    }

    .reprintbtn {
      background-color: rgb(37, 164, 248);
      border: none;
      padding: 8px 12px;
      border-radius: 3px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      font-size: 1rem;
    }
    .reprintbtn:hover {
      background-color: rgb(15, 124, 198);
    }
    .reprintbtn a {
      color: white;
      text-decoration: none;
      display: inline-block;
      width: 100%;
      height: 100%;
    }

    footer.footer {
      grid-area: footer;
      /* background: #f0f0f0; */
      color: #666;
      font-size: 14px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 0.25rem;
      padding: 0.5rem 1rem;
      user-select: none;
    }

    /* Responsive */

    @media (max-width: 768px) {
      body {
        grid-template-areas:
          "header"
          "main"
          "footer";
        grid-template-columns: 1fr;
        grid-template-rows: 60px 1fr 40px;
      }
      aside.sidebar {
        position: fixed;
        top: 60px;
        left: 0;
        height: calc(100% - 60px);
        width: 220px;
        z-index: 1000;
        transform: translateX(-100%);
        box-shadow: 2px 0 5px rgba(0,0,0,0.3);
      }
      aside.sidebar.show {
        transform: translateX(0);
        background: #7f2525;
      }
      header.header .menu-toggle {
        display: block;
      }
      main.main-content {
        padding: 1rem;
      }
      table th, table td {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
      .reprintbtn {
        font-size: 0.9rem;
        padding: 6px 10px;
      }
    }
  </style>
</head>
<body>
  <header class="header">
    <img src="fcahptib.png" alt="FCAHPTIB Logo" />
    <button aria-label="Toggle menu" class="menu-toggle" id="menuToggle">
      <i class="fa fa-bars"></i>
    </button>
  </header>

  <aside class="sidebar" id="sidebar" aria-label="Sidebar Navigation">
    <p class="user-info">
      <i class="fa fa-fw fa-user"></i> <%= fullname %>
    </p>
    <p class="user-info" style="color: #ddd;">
      <i class="fa fa-fw fa-map-marker"></i> <%= department %>
    </p>

    <nav>
      <a href="/dashboard">
        <i class="fa fa-fw fa-dashboard"></i> Dashboard
      </a>
      <a href="/profile">
        <i class="fa fa-fw fa-user"></i> Profile
      </a>
      <a href="/course_registration">
        <i class="fa fa-fw fa-book"></i> Course Registration
      </a>
      <a href="/RePrint_Course_Form" class="active">
        <i class="fa fa-fw fa-book"></i> Reprint Course Form
      </a>
      <a href="/result">
        <i class="fa fa-fw fa-table"></i> My Result
      </a>
      <a href="/change_password">
        <i class="fa fa-fw fa-lock"></i> Change Password
      </a>
      <a href="/logout" id="logout">
        <i class="fa fa-fw fa-sign-out"></i> Logout
      </a>
    </nav>
  </aside>

  <main class="main-content" id="mainContent" role="main" tabindex="-1">
    <h1>REPRINT COURSE FORM</h1>

    <table aria-label="Reprint Course Sessions and Semesters">
      <thead>
        <tr>
          <th>Session</th>
          <th>Semester</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% reprint_courses.forEach(reprint => { %>
          <tr>
            <td><%= reprint.Session %></td>
            <td><%= reprint.Semester %></td>
            <td>
              <button class="reprintbtn" type="button">
                <a href="Reprint_CourseForm?level=<%= reprint.Level %>&department=<%= encodeURIComponent(department) %>&session=<%= reprint.Session %>&semester=<%= reprint.Semester %>">Reprint course form</a>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <footer class="footer" role="contentinfo">
        <div>&copy; <%= new Date().getFullYear() %> FCAHPTIB.</div>
        <div>Designed by Adeola Quadri. A</div>
        <div>Supervised Dr. Mrs Olarenwaju O T.</div>
  </footer>

  <script src="/jquery-3.7.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script>
    // Sidebar toggle for mobile
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('show');
    });

    // Confirm logout
    document.querySelector('#logout').addEventListener('click', (e) => {
      if (!confirm('Are you sure you want to logout?')) {
        e.preventDefault();
      } else {
        fetch('/logout', { method: 'GET' });
      }
    });
  </script>
</body>
</html>
