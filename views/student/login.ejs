<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Student Login | FCAHPTIB</title>
  <link rel="icon" href="/fcahptib.png" type="image/png" />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    rel="stylesheet"
  />

  <style>
    /* Reset */
    *, *::before, *::after {
      box-sizing: border-box;
    }
  body {
  margin: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #a73232 0%, #681f1f 100%);
  height: 100vh;
  display: flex;
  flex-direction: column;  /* <-- Add this */
  align-items: center;
  justify-content: center;
  color: #333;
}

    .login-container {
      background: #fff;
      width: 350px;
      padding: 2.5rem 2rem;
      border-radius: 12px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.25);
      text-align: center;
    }
    .login-container img {
      height: 60px;
      margin-bottom: 1.5rem;
    }
    .login-container h2 {
      margin-bottom: 2rem;
      font-weight: 600;
      color: #a73232;
      letter-spacing: 1px;
      font-size: 1.8rem;
    }

    form {
      text-align: left;
    }

    .form-group {
      position: relative;
      margin-bottom: 1.75rem;
    }
    input {
      width: 100%;
      padding: 12px 12px 12px 40px;
      font-size: 16px;
      border-radius: 6px;
      border: 1.8px solid #ccc;
      outline: none;
      transition: border-color 0.3s ease;
      font-family: inherit;
    }
    input:focus {
      border-color: #a73232;
      box-shadow: 0 0 5px rgba(167, 50, 50, 0.5);
    }
    label {
      position: absolute;
      top: 12px;
      left: 40px;
      color: #999;
      font-size: 14px;
      pointer-events: none;
      transition: 0.25s ease all;
      font-weight: 500;
      font-family: inherit;
    }
    input:focus + label,
    input:not(:placeholder-shown) + label {
      top: -8px;
      left: 10px;
      font-size: 12px;
      background: #fff;
      padding: 0 6px;
      color: #a73232;
      font-weight: 700;
      border-radius: 4px;
    }
    .icon {
      position: absolute;
      top: 50%;
      left: 12px;
      transform: translateY(-50%);
      color: #a73232;
      font-size: 18px;
      opacity: 0.7;
      pointer-events: none;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #a73232;
      color: #fff;
      border: none;
      border-radius: 6px;
      font-size: 18px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      font-family: inherit;
    }
    button:hover,
    button:focus {
      background-color: #7f2525;
    }

    #error {
      background-color: #f8d7da;
      border: 1px solid #f5c2c7;
      color: #842029;
      padding: 12px;
      border-radius: 6px;
      margin-bottom: 1rem;
      font-size: 14px;
      display: none;
      text-align: center;
      font-weight: 600;
    }

   footer {
  margin-top: 2rem;
  padding: 1rem 0;
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 14px;
  color: #fff;
  background-color: transparent;
  user-select: none;
}
footer p {
  margin: 4px 0;
  opacity: 0.8;
}

  </style>
</head>
<body>
  <div class="login-container" role="main" aria-label="Student login form">
    <img src="fcahptib.png" alt="FCAHPTIB Logo" />
    <h2>Student Login</h2>

    <div id="error" class="<%= alert %>"><%= message %></div>

    <form action="/" method="post" onsubmit="return validateForm()">
      <div class="form-group">
        <i class="fa fa-user icon" aria-hidden="true"></i>
        <input
          type="text"
          name="matric"
          id="Matric"
          placeholder=" "
          required
          autocomplete="username"
          aria-describedby="matric-label"
        />
        <label for="Matric" id="matric-label">Student ID</label>
      </div>

      <div class="form-group">
        <i class="fa fa-lock icon" aria-hidden="true"></i>
        <input
          type="password"
          name="password"
          id="Pass"
          placeholder=" "
          required
          autocomplete="current-password"
          aria-describedby="pass-label"
        />
        <label for="Pass" id="pass-label">Password</label>
      </div>

      <button type="submit">Login</button>
    </form>
  </div>

  <footer>
  <p>&copy; <span id="cr"></span> FCAHPTIB.</p>
  <p>Designed by Adeola Quadri. A</p>
  <p>Supervised Dr. Mrs Olarenwaju O T.</p>
</footer>


  <script>
    function validateForm() {
      const matric = document.getElementById('Matric');
      const pass = document.getElementById('Pass');
      let valid = true;
      if (!matric.value.trim()) {
        showError("Student ID cannot be empty.");
        valid = false;
      } else if (!pass.value.trim()) {
        showError("Password cannot be empty.");
        valid = false;
      } else {
        hideError();
      }
      return valid;
    }

    function showError(msg) {
      const error = document.getElementById('error');
      error.textContent = msg;
      error.style.display = 'block';
      setTimeout(() => {
        error.style.display = 'none';
      }, 3000);
    }

    function hideError() {
      const error = document.getElementById('error');
      error.style.display = 'none';
    }

    // Set current year in footer
    document.getElementById('cr').textContent = new Date().getFullYear();

    // Show backend error message for a moment if exists
    const errorMessage = document.getElementById('error');
    if (errorMessage && errorMessage.textContent.trim() !== '') {
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
      }, 3000);
    }
  </script>
</body>
</html>